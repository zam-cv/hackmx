---
import Tec from '@/components/Tec';

interface Props {
  withMenu: boolean;
  mainRoute: string;
}

const { withMenu, mainRoute } = Astro.props;
---

<div
  class="w-full grid grid-cols-[auto_1fr] px-5 py-3 bg-p-secondary-background md:h-32 h-28 max-md:p-1 sticky top-0 z-50"
>
  <div class="px-5 flex items-center">
    <a href={mainRoute} class="h-full w-full flex gap-5 items-center">
      <div class="relative h-full w-14 max-lg:w-10 flex">
        <img
          src="/logo.png"
          alt="logo"
          class="w-full h-full object-scale-down absolute"
        />
      </div>
      <div>
        <h1 class="text-2xl font-bold">HACKMX VI</h1>
      </div>
    </a>
  </div>
  <div class="grid grid-cols-[1fr_auto_auto_auto]">
    <div
      id="nav"
      class="grid max-lg:hidden grid-cols-[1fr_auto] max-lg:flex max-lg:pr-12 max-lg:flex-col max-lg:fixed max-lg:bg-p-secondary-background top-0 right-0 max-lg:h-full z-10"
    >
      <div class="px-10 flex items-center max-lg:items-start max-lg:pt-10">
        <slot name="nav" />
      </div>
      <div class="flex gap-5 px-5 items-center max-lg:p-10">
        <slot name="action" />
      </div>
    </div>
    <div>
      <div
        id="back"
        class="max-lg:fixed max-lg:hidden max-lg:bg-[#00000085] top-0 left-0 h-full w-full cursor-pointer"
      >
      </div>
    </div>
    <div class="flex items-center">
      {
        withMenu && (
          <button
            id="menu"
            class="hidden max-lg:flex items-center p-5 cursor-pointer"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="2"
              stroke="currentColor"
              class="size-8"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"
              />
            </svg>
          </button>
        )
      }
      <div class="pr-5">
        <Tec className='h-9 w-auto object-contain' />
      </div>
    </div>
    <div>
      <slot name="avatar" />
    </div>
  </div>
</div>
<script>
  const menu = document.getElementById("menu");
  const nav = document.getElementById("nav");
  const back = document.getElementById("back");

  if (!menu && !nav) {
    throw new Error("menu or nav not found");
  }

  menu?.addEventListener("click", () => {
    nav?.classList.toggle("max-lg:hidden");
    back?.classList.toggle("max-lg:hidden");
  });

  back?.addEventListener("click", () => {
    nav?.classList.toggle("max-lg:hidden");
    back?.classList.toggle("max-lg:hidden");
  });
</script>
